{% extends 'base.html.twig' %}

{% block title %}Liste utilisateurs{% endblock %}

{% block body %}
<style>
    #goBack { position: fixed; bottom: 2rem; left: 2rem; height: 5rem; }
    #goBack:hover { transform: scale(1.1); }

    body { background-color: black; background-image: url("{{ asset('images/death-star.jpg') }}"); background-position: right 15%; background-size: auto; background-repeat: no-repeat; font-family: 'Star Wars', sans-serif; color: white; }

    #login-title { color: red; font-size: 2rem; text-align: center; margin-bottom: 3rem; }

    #email-list { text-align: center; width: 20%; text-shadow: 2px 2px black; border: 5px solid #3F3F3D; border-radius: 10px; background-color: #5D5D5C; padding: 2rem; position: absolute; transform: translate(-50%, -50%); left: 50%; top: 50%;}
    #email-list div { margin-top: 10px; }
</style>



<div id="email-list">

    <h1>Grand Moff</h1>

    {% for user in users %}

        <div>{{ user.getEmail() }}</div>

    {% endfor %}
</div>

<a href="{{ path("app_menu") }}"><img id="goBack" src="{{ asset('images/back.png') }}"></a>


{% endblock %}
